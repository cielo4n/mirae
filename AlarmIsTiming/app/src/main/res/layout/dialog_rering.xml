<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복 시간"
        android:gravity="center"
        android:background="#dddddd"/>

    <RadioGroup
        android:id="@+id/rg_re_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <RadioButton
            android:id="@+id/rb_re_minute_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5분"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_re_minute_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10분"/>

        <RadioButton
            android:id="@+id/rb_re_minute_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15분"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복 횟수"
        android:gravity="center"
        android:background="#dddddd"/>

    <RadioGroup
        android:id="@+id/rg_re_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/rb_re_round_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1회"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rb_re_round_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2회"/>
        <RadioButton
            android:id="@+id/rb_re_round_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3회"/>
        <RadioButton
            android:id="@+id/rb_re_round_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5회"/>
    </RadioGroup>


</LinearLayout>